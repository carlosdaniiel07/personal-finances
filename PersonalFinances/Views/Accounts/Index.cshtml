@model IEnumerable<PersonalFinances.Models.Account>

@{
    ViewBag.Title = "Accounts";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small>Add, edit, remove and view your accounts</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- box -->
        <div class="box box-primary">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-2">
                        <a href="@Url.Action("New", "Accounts")" class="btn btn-flat btn-block btn-success"><i class="fa fa-university"></i> New account</a>
                    </div>
                </div>

                <br/>

                <table class="table table-hover datatable" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Initial balance</th>
                            <th>Balance</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in Model)
                        {
                            <tr>
                                <td>@account.Name</td>
                                <td><span class="label label-info">@account.AccountType</span></td>
                                <td>@account.InitialBalance.ToString("F2")</td>
                                <td>@account.Balance.ToString("F2")</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("View", "Accounts", new { Id = account.Id})" class="btn btn-flat btn-default"><i class="fa fa-eye"></i> View</a>
                                        <a href="@Url.Action("Edit", "Accounts", new { Id = account.Id })" class="btn btn-flat btn-default"><i class="fa fa-pencil-square-o"></i> Edit</a>
                                        <a href="@Url.Action("Delete", "Accounts", new { Id = account.Id})" class="btn btn-flat btn-danger"><i class="fa fa-trash-o"></i> Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


