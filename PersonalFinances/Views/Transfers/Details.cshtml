@model PersonalFinances.Models.Transfer

@{
    ViewBag.Title = "View transfer details";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small>View transfer details</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "Transfers")">Transfers</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- box -->
        <div class="box box-warning">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <form role="form">
                            <div class="row">
                                <div class="col-xs-2">
                                    <div class="form-group">
                                        @Html.LabelFor(t => t.Id)
                                        @Html.TextBoxFor(t => t.Id, new { Class = "form-control", Readonly = "readonly" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(t => t.Description)
                                @Html.TextBoxFor(t => t.Description, new { Class = "form-control", Readonly = "readonly" })
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(t => t.InclusionDate)
                                        @Html.TextBox("InclusionDate", Model.InclusionDate.ToShortDateString(), new { Class = "form-control", Readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(t => t.AccountingDate)
                                        @Html.TextBox("AccountingDate", Model.AccountingDate.ToShortDateString(), new { Class = "form-control", Readonly = "readonly" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(t => t.Value)
                                        @Html.TextBoxFor(t => t.Value, new { Class = "form-control", Readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(t => t.Tax)
                                        @Html.TextBoxFor(t => t.Tax, new { Class = "form-control", Readonly = "readonly" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(t => t.Origin.Name)
                                        @Html.TextBoxFor(t => t.Origin.Name, new { Class = "form-control", Readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(t => t.Target.Name)
                                        @Html.TextBoxFor(t => t.Target.Name, new { Class = "form-control", Readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(t => t.TransferStatus)
                                        @Html.TextBoxFor(t => t.TransferStatus, new { Class = "form-control", Readonly = "readonly" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="checkbox">
                                        <label title="If you check this field, the movement will be automatically launched when expires">
                                            @Html.CheckBoxFor(t => t.AutomaticallyLaunch, new { Disabled = "disabled" })
                                            @Html.DisplayNameFor(t => t.AutomaticallyLaunch)
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(t => t.Observation)
                                @Html.TextAreaFor(t => t.Observation, new { Class = "form-control", Readonly = "readonly" })
                            </div>

                            <br />

                            <a href="@Url.Action("Cancel", "Transfers", new { Id = Model.Id})" class="btn btn-sm btn-danger btn-flat pull-left"><i class="fa fa-trash-o"></i> Delete transfer</a>
                            @if (Model.TransferStatus.Equals(MovementStatus.Pending))
                            {
                                <a href="@Url.Action("Launch", "Transfers", new { Id = Model.Id})" class="btn btn-sm btn-info btn-flat pull-left"><i class="fa fa-check-circle"></i> Launch transfer</a>
                            }
                            else
                            {
                                <a href="@Url.Action("Launch", "Transfers", new { Id = Model.Id})" class="btn btn-sm btn-info btn-flat pull-left disabled"><i class="fa fa-check-circle"></i> Launch transfer</a>
                            }
                        </form>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

