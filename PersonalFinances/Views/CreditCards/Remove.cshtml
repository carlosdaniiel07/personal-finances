@model PersonalFinances.Models.CreditCard

@{
    ViewBag.Title = "Remove credit card";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small>Remove a card</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "CreditCards")">Credit cards</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- box -->
        <div class="box box-danger">
            <div class="box-body">
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <h4><i class="icon fa fa-warning"></i> Alert!</h4>
                    This operation can not be undone!
                </div>

                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(c => c.Name)</dt>
                    <dd>@Html.DisplayFor(c => c.Name)</dd>

                    <dt>@Html.DisplayNameFor(c => c.Limit)</dt>
                    <dd>@Html.DisplayFor(c => c.Limit)</dd>

                    <dt>@Html.DisplayNameFor(c => c.InvoiceClosure)</dt>
                    <dd>@Html.DisplayFor(c => c.InvoiceClosure)</dd>

                    <dt>@Html.DisplayNameFor(c => c.PayDay)</dt>
                    <dd>@Html.DisplayFor(c => c.PayDay)</dd>
                </dl>

                <form action="@Url.Action("Remove", "CreditCards")" method="post">
                    @Html.HiddenFor(c => c.Id)
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-flat btn-danger"><i class="fa fa-trash-o"></i> Remove</button>
                </form>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
